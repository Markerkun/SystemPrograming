<Window x:Class="_06_CopyFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_06_CopyFile"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="1*"></ColumnDefinition>
            <ColumnDefinition Width ="6*"></ColumnDefinition>
        </Grid.ColumnDefinitions>


        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="0.3*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
        </Grid.RowDefinitions>


        <TextBox Name="From" FontSize="30" VerticalAlignment="Center" Height="42">From:</TextBox>
        <TextBox Name="To" FontSize="30" VerticalAlignment="Center" Height="42" Grid.Row="2">To:</TextBox>
        <TextBox Name="sourceTb" Grid.Column="1" Text="{Binding Source}" Background="lightGray" ></TextBox>
        <TextBox Name="destTb" Grid.Row="2" Grid.Column="1" Text="{Binding Source}" Background="lightGray" ></TextBox>
        <TextBox Margin="11,70,169,76" Grid.Row="1">To:</TextBox>
        <Button Name="Ok" Click="Button_Click" Content="Ok" HorizontalAlignment="Left" Margin="56,110,0,0" VerticalAlignment="Top" Width="75" Height="0" Grid.Row="1"/>
        <ListBox Name="listBox" Grid.Row="3" Grid.ColumnSpan="2" Margin="10,10,10,10"/>
        <Button Content="Copy" Name="Copy" Click="CopyBtn" HorizontalAlignment="Left" Margin="56,110,0,0" VerticalAlignment="Top" Width="75" Height="42" Grid.Row="1" Grid.Column="1"/>
        <ProgressBar Name="progress" Height="15" VerticalAlignment="Bottom" Grid.Row="3" Grid.ColumnSpan="2" IsIndeterminate="{Binding IsWaiting}"></ProgressBar>
        
    </Grid>
</Window>
